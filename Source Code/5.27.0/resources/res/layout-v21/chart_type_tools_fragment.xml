<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/everything" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/contentLayout" android:background="@drawable/bg_tools_dialog" android:paddingLeft="@dimen/dp12" android:paddingRight="@dimen/dp12" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/time_scale_bar_height" android:layout_marginStart="@dimen/dp100" android:elevation="@dimen/dp12">
        <LinearLayout android:orientation="vertical" android:id="@+id/mainContent" android:paddingBottom="@dimen/dp8" android:visibility="visible" android:layout_width="@dimen/dp224" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/sp12" android:textColor="@color/grey_blur_70" android:id="@+id/chartTypeTitle" android:paddingTop="@dimen/dp10" android:paddingBottom="@dimen/dp12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chart_type" android:textAllCaps="true" android:fontFamily="@font/regular" android:letterSpacing="0.02"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/zoneChart" android:background="@drawable/bg_button_chart_type_left" android:padding="@dimen/dp6" android:visibility="visible" android:clickable="true" android:layout_width="@dimen/dp56" android:layout_height="@dimen/dp30" android:layout_marginEnd="1px" app:srcCompat="@drawable/ic_icon_view2"/>
                <ImageView android:id="@+id/linerChart" android:background="@drawable/bg_button_chart_type_central" android:padding="@dimen/dp6" android:visibility="visible" android:clickable="true" android:layout_width="@dimen/dp56" android:layout_height="@dimen/dp30" android:layout_marginEnd="1px" app:srcCompat="@drawable/ic_icon_view3"/>
                <ImageView android:id="@+id/candleChart" android:background="@drawable/bg_button_chart_type_central" android:padding="@dimen/dp6" android:visibility="visible" android:clickable="true" android:layout_width="@dimen/dp56" android:layout_height="@dimen/dp30" android:layout_marginEnd="1px" app:srcCompat="@drawable/ic_icon_view1"/>
                <ImageView android:id="@+id/barChart" android:background="@drawable/bg_button_chart_type_rigth" android:padding="@dimen/dp6" android:visibility="visible" android:clickable="true" android:layout_width="@dimen/dp56" android:layout_height="@dimen/dp30" android:layout_marginEnd="1px" app:srcCompat="@drawable/ic_icon_view4"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/colorCandleContainer" android:paddingTop="@dimen/dp12" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/grayCandle" android:background="@drawable/bg_button_chart_type_left" android:padding="@dimen/dp6" android:visibility="visible" android:clickable="true" android:layout_width="0dp" android:layout_height="@dimen/dp30" android:layout_weight="1" android:layout_marginEnd="1px" app:srcCompat="@drawable/ic_candle_gray"/>
                <ImageView android:id="@+id/colorCandle" android:background="@drawable/bg_button_chart_type_rigth" android:padding="@dimen/dp6" android:visibility="visible" android:clickable="true" android:layout_width="0dp" android:layout_height="@dimen/dp30" android:layout_weight="1" android:layout_marginEnd="1px" app:srcCompat="@drawable/ic_candle_colore"/>
            </LinearLayout>
            <FrameLayout android:layout_gravity="center_horizontal" android:paddingTop="@dimen/dp8" android:paddingBottom="@dimen/dp8" android:layout_width="@dimen/dp216" android:layout_height="wrap_content">
                <com.iqoption.view.ClippedInMiddleRecyclerViewPager android:id="@+id/timerIntervalListWhite" android:layout_width="match_parent" android:layout_height="@dimen/dp30"/>
                <com.iqoption.view.ClippedInMiddleRecyclerViewPager android:id="@+id/timerIntervalList" android:layout_width="match_parent" android:layout_height="@dimen/dp30"/>
                <View android:layout_gravity="center" android:id="@+id/current_item" android:background="@drawable/interval_square_background" android:layout_width="@dimen/dp43" android:layout_height="@dimen/dp30"/>
                <View android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:background="@drawable/shadow_tools_popup_left" android:layout_width="@dimen/dp43" android:layout_height="@dimen/dp30"/>
                <View android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:background="@drawable/shadow_tools_popup_rigth" android:layout_width="@dimen/dp43" android:layout_height="@dimen/dp30"/>
            </FrameLayout>
            <View android:background="#19ffffff" android:layout_width="match_parent" android:layout_height="1px"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/heikenAshiContainer" android:background="@drawable/bg_tradermood_switcher" android:paddingTop="@dimen/dp8" android:paddingBottom="@dimen/dp8" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/sp16" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/heiken_ashi" android:fontFamily="@font/medium"/>
                <ImageView android:id="@+id/infoIconHeikenAshi" android:padding="@dimen/dp8" android:clickable="true" android:layout_width="@dimen/dp30" android:layout_height="@dimen/dp30" android:src="@drawable/info_wager_btn"/>
                <androidx.appcompat.widget.SwitchCompat android:theme="@style/GreenSwitch" android:id="@g/switchHeikenAshi" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/sp12" android:textColor="@color/grey_blur_50" android:id="@+id/infoTextHeikenAshi" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/dp8" android:text="@j/heiken_ashi_descr"/>
            <View android:background="@color/white_10" android:layout_width="match_parent" android:layout_height="@dimen/separator"/>
            <androidx.appcompat.widget.SwitchCompat android:theme="@style/GreenSwitch" android:textSize="@dimen/sp16" android:textColor="@color/white" android:id="@+id/switchAutoScalling" android:background="@drawable/bg_tradermood_switcher" android:paddingTop="@dimen/dp8" android:paddingBottom="@dimen/dp10" android:layout_width="match_parent" android:layout_height="@dimen/dp44" android:text="@string/auto_scaling"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
