<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:tag="layout/fragment_traderoom_settings_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/dp48">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/backButton" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back" style="@style/IQActionButton"/>
        <TextView android:textSize="@dimen/sp20" android:textColor="@android:color/white" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp96" android:text="@j/trading_settings" android:fontFamily="sans-serif-medium"/>
    </FrameLayout>
    <ScrollView android:id="@+id/contentScroll" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/contentLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp80" android:layout_marginTop="@dimen/dp12" android:layout_marginRight="@dimen/dp80" android:layout_marginBottom="@dimen/dp24">
            <LinearLayout android:orientation="vertical" android:layout_marginBottom="@dimen/dp28" style="@style/SettingGroup">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="@j/traderoom_settings" style="@style/SettingGroupTitle"/>
                    <com.iqoption.view.SettingItemView android:id="@+id/expPanelSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/expiration_panel" style="@style/SettingItem"/>
                </LinearLayout>
                <com.iqoption.view.SettingItemView android:id="@+id/tradersMoodSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@string/traders_mood" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/liveDealsSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@string/live_deals" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/shareMyLiveDealsSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/share_my_live_deals" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/smallDealExpirableSetting" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/smallDealNonExpirableSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/show_small_deals_on_chart_for_non_expirable" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/soundSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/sound" style="@style/SettingItem"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" style="@style/SettingGroup">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="@string/chart_settings" style="@style/SettingGroupTitle"/>
                    <com.iqoption.view.SettingItemView android:id="@+id/investmentAmountSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/investment_amount" style="@style/SettingItem"/>
                    <com.iqoption.view.SettingItemView android:id="@+id/hiLowChartSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/show_hi_low_on_chart" style="@style/SettingItem"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/purchaseGroup" style="@style/SettingGroup">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:text="@j/purchase_settings" style="@style/SettingGroupTitle"/>
                    <com.iqoption.view.SettingItemView android:id="@+id/buyInClickClickSetting" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/SettingItem"/>
                </LinearLayout>
                <com.iqoption.view.SettingItemView android:id="@+id/sellWithConfirmationForexClickSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/sell_with_confirmation_forex" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/marginAddOnSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/use_all_balance_to_keep_position_open" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/trailingStopSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/trailing_stop" style="@style/SettingItem"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/inAppNotifications" style="@style/SettingGroup">
                <TextView android:text="@j/in_app_notifications" style="@style/SettingGroupTitle"/>
                <com.iqoption.view.SettingItemView android:id="@+id/tickNotificationSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@string/show_notification_about_tick" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/latestMovementsSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/show_sharp_jump_in_trade_room" style="@style/SettingItem"/>
                <com.iqoption.view.SettingItemView android:id="@+id/fxOptionsNextExpirationPopupSetting" android:layout_width="match_parent" android:layout_height="wrap_content" app:label="@j/show_fx_options_next_expiration_popup" style="@style/SettingItem"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/pushSettings" android:showDividers="none" style="@style/SettingGroup">
                <TextView android:text="@j/push_notifications" style="@style/SettingGroupTitle"/>
                <ProgressBar android:layout_gravity="center" android:id="@+id/progressLoadPushSetting" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/pushSettingsContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@drawable/settings_divider" android:showDividers="middle"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/openLicenses" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:layout_marginBottom="@dimen/dp28">
                <TextView android:textSize="@dimen/sp16" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:background="?attr/selectableItemBackground" android:paddingLeft="@dimen/dp16" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@j/open_source_licenses"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
